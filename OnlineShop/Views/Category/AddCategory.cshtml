@model OnlineShop.Models.Category

@{
    ViewData["Title"] = "Add Category";
}

<h2>Add Category</h2>

<form asp-action="AddCategory" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <button type="submit">Add Category</button>
</form>
