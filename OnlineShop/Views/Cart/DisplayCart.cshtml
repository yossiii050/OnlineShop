@model List<CartItem>
@using OnlineShop.Models.Cart

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css" integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<style>
    body {
        margin-top: 20px;
        background-color: #f1f3f7;
    }

    .avatar-lg {
        height: 5rem;
        width: 5rem;
    }

    .font-size-18 {
        font-size: 18px !important;
    }

    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    a {
        text-decoration: none !important;
    }

    .w-xl {
        min-width: 160px;
    }

    .card {
        margin-bottom: 24px;
        -webkit-box-shadow: 0 2px 3px #e4e8f0;
        box-shadow: 0 2px 3px #e4e8f0;
    }

    .card {
        position: relative;
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        -ms-flex-direction: column;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 1px solid #eff0f2;
        border-radius: 1rem;
    }

</style>
@{
    decimal totalPrice = 0;
}
<div class="container">
    <div class="row">
        <div class="col-xl-8">
            @if (Model?.Count > 0)
            {
                
                    
                
                @foreach (var item in Model)
                {
                    <div class="card border shadow-none">
                        <div class="card-body">
                            <div class="d-flex align-items-start border-bottom pb-3">
                                <div class="me-4">
                                    <img src="@item.Image" alt="" class="avatar-lg rounded">
                                </div>
                                <div class="flex-grow-1 align-self-center overflow-hidden">
                                    <div>
                                        <h5 class="text-truncate font-size-18"><a href="#" class="text-dark">@item.ProductName</a></h5>
                                        <p class="text-muted mb-0">
                                            <!-- You can add dynamic rating stars here -->
                                        </p>
                                        <p class="mb-0 mt-1">Color : <span class="fw-medium">Dynamic Color</span></p>
                                    </div>
                                </div>
                                <div class="flex-shrink-0 ms-2">
                                    <ul class="list-inline mb-0 font-size-16">
                                        <li class="list-inline-item">
                                            <form action="@Url.Action("RemoveFromCart", "Cart")" method="post" class="d-inline">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <input type="hidden" name="quantity" value="@item.Quantity" />
                                                <button type="submit" class="btn btn-link text-muted px-1" style="padding: 0; border: none; background: none;">
                                                    <i class="mdi mdi-trash-can-outline"></i>
                                                </button>
                                            </form>
                                        </li>
                                        
                                    </ul>
                                </div>
                            </div>
                            <div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mt-3">
                                            <p class="text-muted mb-2">Price</p>
                                            <h5 class="mb-0 mt-2">₪@item.ProductPrice</h5>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="mt-3">
                                            <p class="text-muted mb-2">Quantity</p>
                                            <div class="d-inline-flex">
                                                <select class="form-select form-select-sm w-xl" name="quantity" onchange="checkAvailability(this, @item.ProductId)" data-product-id="@item.ProductId">
                                                    @for (int i = 1; i <= 10; i++)
                                                    {
                                                        <!option value="@i" @(item.Quantity == i ? "selected" : "")>@i</!option>
                                                    }
                                                </select>


                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mt-3">
                                            <p class="text-muted mb-2">Total</p>
                                            <h5>₪@(item.ProductPrice * item.Quantity)</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end card -->
                    totalPrice += item.ProductPrice * item.Quantity;
                }

                <div class="row my-4">
                    <div class="col-sm-6">
                        <a href="/" class="btn btn-link text-muted">
                            <i class="mdi mdi-arrow-left me-1"></i> Continue Shopping </a>
                    </div> <!-- end col -->
                    <div class="col-sm-6">
                        <div class="text-sm-end mt-2 mt-sm-0">
                            <a href="@Url.Action("SubmitBillingInfo", "Cart")" class="btn btn-success">
                                <i class="mdi mdi-cart-outline me-1"></i> Checkout
                            </a>
                        </div>
                    </div>
                    <!-- end col -->
                </div> <!-- end row-->
            }
            else
            {
                <p>Your cart is empty.</p>
            }
        </div>

        <div class="col-xl-4">
            <div class="mt-5 mt-lg-0">
                <div class="card border shadow-none">
                    <div class="card-header bg-transparent border-bottom py-3 px-4">
                        <h5 class="font-size-16 mb-0">Order Summary <span class="float-end">#MN0124</span></h5>
                    </div>
                    <div class="card-body p-4 pt-2">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <tbody>
                                    <tr>
                                        <td>Sub Total :</td>
                                        <td class="text-end">₪ @totalPrice</td>
                                    </tr>
                                    <tr>
                                        <td>Discount :</td>
                                        <td class="text-end">- ₪ <span id="discount">0.00</span></td>
                                    </tr>
                                    <tr>
                                        <td>Shipping Charge :</td>
                                        <td class="text-end">₪ 25(calculate shipping here)</td>
                                    </tr>
                                    <tr>
                                        <td>Estimated Tax : </td>
                                        <td class="text-end">₪ @((totalPrice * 0.18m).ToString("F2")) (assuming 18% tax)</td>
                                    </tr>
                                    <tr class="bg-light">
                                        <th>Total :</th>
                                        <td class="text-end">
                                            <span class="fw-bold">
                                                ₪ <span id="finalprice">
                                                    @(((totalPrice)+(totalPrice * 0.18m)+25).ToString("F2"))
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- end table-responsive -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->
    
</div>

    <script>
        

    function checkAvailability(selectElement, productId) {
        var selectedQuantity = selectElement.value;

        $.ajax({
            url: '@Url.Action("CheckAvailability", "Cart")',
            type: 'POST', // Change this to POST
            data: { productId: productId, quantity: selectedQuantity },
            success: function (response) {
                if (response.error) {
                    alert(response.error);
                    $(selectElement).val(product.Amount); // Reset to the available amount
                }
                else {
                    // Reload the page to reflect the updated cart
                    location.reload();
                }
            },
            error: function () {
                alert('Error checking availability');
            }
        });
    }

    </script>
