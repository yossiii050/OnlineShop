@model OnlineShop.Models.ViewModels.HomeVM

@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-image: url(https://images.hdqwalls.com/download/hogwarts-legacy-2021-hf-3840x2160.jpg);
        background-repeat: no-repeat;
        background-size: cover; 
        background-position: center; 
    }
</style>

<style>
    
    .welcome-text {
        font-family: 'Playfair Display', serif; 
        color: #FEF5DF; 
        font-size: 30px; 
        background: rgba(77, 77, 77, 0.5); 
        padding: 20px;
        border-radius: 10px;
        text-align: center;
    }

    .search-container {
        text-align: right; 
        padding: 20px; 
        width: 100%; 
    }

    .search-box {
        display: block; 
        background: rgba(77, 77, 77, 0.9);
        color: #FEF5DF;
        padding: 10px; 
        border-radius: 10px;
        width: 100%; 
    }

    .search-input {
        width: calc(100% - 140px); 
        padding: 10px;
        margin-right: 10px;
        border: 1px solid #FEF5DF;
        background-color: transparent;
        color: #FEF5DF;
        border-radius: 5px;
        font-family: 'Playfair Display', serif;
        font-size: 16px;
    }

    .search-button {
        background-color: #258cfb;
        color: #FEF5DF;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-family: 'Playfair Display', serif;
        font-size: 16px;
        float: right; 
    }

    .search-button:hover {
        background-color: #1a6cba;
    }

    .filter-container {
        text-align: center;
        padding: 20px;
        width: 100%;
    }

    .filter-box {
        display: inline-block;
        background: rgba(77, 77, 77, 0.9);
        color: #FEF5DF;
        padding: 10px;
        border-radius: 10px;
        width: auto;
    }

    .filter-input, .checkbox-input {
        margin: 5px;
        padding: 5px;
        border: 1px solid #FEF5DF;
        background-color: transparent;
        color: #FEF5DF;
        border-radius: 5px;
        font-family: 'Playfair Display', serif;
        font-size: 16px;
    }

    .filter-input:focus {
        background-color: rgba(77, 77, 77, 0.9); 
        color: #FEF5DF; 
        outline: none; 
    }

    .checkbox-input {
        display: inline-block;
    }

    .checkbox-input input {
        margin-right: 5px;
    }

    .filter-button {
        background-color: #258cfb;
        color: #FEF5DF;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-family: 'Playfair Display', serif;
        font-size: 16px;
    }

    .filter-button:hover {
        background-color: #1a6cba;
    }


</style>

<div class="container mt-5">
    <div class="welcome-text mb-5">
        <h1 class="display-4">Welcome to the Harry Potter store!</h1>
    </div>
    <div class="search-container text-center mb-4">
        <div class="search-box">
            <form asp-action="Search" asp-controller="Home" method="get">
                <input type="text" name="search" placeholder="Search products..." class="search-input">
                <button type="submit" class="search-button">Search</button>
            </form>
        </div>
    </div>

    <div class="filter-container text-center mb-4">
    <div class="filter-box">
        <form asp-action="Filter" asp-controller="Home" method="get">
            <select name="sort" class="filter-input">
                <option value="">Sort By</option>
                <option value="price_asc">Price: Low to High</option>
                <option value="price_desc">Price: High to Low</option>
            </select>
            <select name="category" class="filter-input">
                <option value="">Select Category</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <input type="text" name="priceRange" class="filter-input" placeholder="Price Range (e.g., 10-50)">
            <div class="checkbox-input">
                <input type="checkbox" id="filterOnSale" name="onSale" value="true" class="form-check-input">
                <label for="filterOnSale" class="form-check-label">On Sale</label>
            </div>

            <button type="submit" class="filter-button">Apply Filters</button>
        </form>
    </div>
</div>


    <div class="row row-cols-3 row-cols-md-3 g-4">
        @foreach (var prod in Model.Products)
        {
            <div class="col">
                <partial name="_IndividualProductCard" model="prod" />
            </div>
        }
    </div>



